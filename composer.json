{
    "name": "mglaman/drupalcamp-base",
    "description": "DrupalCamp website project template",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        },
        {
            "type": "path",
            "url": "./tests/testing_camp"
        },
        {
            "type": "path",
            "url": "./modules/conference_sessions"
        }
    ],
    "require": {
        "composer/installers": "^1.0.23",
        "drupal-composer/drupal-scaffold": "~1",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "8.1.x-dev",
        "drupal/console": "~0.10",
        "drupal/address": "8.1.x-dev",
        "drupal/entity": "8.1.x-dev",
        "drupal/inline_entity_form": "8.1.x-dev",
        "drupal/pathauto": "8.1.x-dev",
        "drupal/profile": "8.1.x-dev",
        "drupal/state_machine": "8.1.x-dev",
        "drupal/commerce": "8.2.x-dev",
        "drupal/layout_plugin": "8.x-1.x-dev",
        "drupal/page_manager": "^8.1@alpha",
        "drupal/metatag": "8.x-1.x-dev",
        "drupal/bootstrap": "~8",
        "drupal/bootstrap_layouts": "~8",
        "drupal/courier": "^8.1@alpha",
        "drupalcamps/conference_sessions": "dev-conference-sessions-module"
    },
    "require-dev": {
        "behat/mink": "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/drupal-extension": "~3.0",
        "jcalderonzumba/gastonjs": "^1.1@dev",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "2.7.*"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": false,
    "autoload": {
         "classmap": [
             "scripts/composer/ScriptHandler.php"
         ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
             "DrupalProject\\composer\\ScriptHandler::buildScaffold",
             "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
         ],
         "post-update-cmd": [
             "DrupalProject\\composer\\ScriptHandler::buildScaffold",
             "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
         ]
    },
    "extra": {
        "patches": {
            "composer/installers": {
                "Fix installer-paths for absolute": "https://patch-diff.githubusercontent.com/raw/composer/installers/pull/272.patch"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/modules/custom/{$name}": ["type:drupal-module-custom"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    }
}
