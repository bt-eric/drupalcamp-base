{
    "name": "mglaman/drupalcamp-base",
    "description": "DrupalCamp website project template",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url":  "https://packages.drupal.org/8"
        },
        {
            "type": "path",
            "url": "./tests/testing_camp"
        },
        {
            "type": "path",
            "url": "./modules/conference_sessions"
        }
    ],
    "require": {
        "composer/installers": "^1.0.23",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "cweagans/composer-patches": "~1.0",
        "drush/drush": "8.0.5",
        "drupal/core": "~8.1",
        "drupal/console": "~0.10",
        "phing/phing": "^2.14",
        "drupal/pathauto": "~1",
        "drupal/commerce": "2.0.x-dev",
        "drupal/entity": "1.0.x-dev",
        "drupal/inline_entity_form": "1.0.x-dev",
        "drupal/layout_plugin": "~1",
        "drupal/page_manager": "~1",
        "drupal/metatag": "~1",
        "drupal/bootstrap": "~3",
        "drupal/bootstrap_layouts": "~1",
        "drupalcamps/conference_sessions": "dev-conference-sessions-module"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": false,
    "autoload": {
         "classmap": [
             "scripts/composer/ScriptHandler.php"
         ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::buildScaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::buildScaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "if [ -f shared/settings.php ] ; then cd web/sites/default; rm settings.php; ln -s ../../../local/settings.php settings.php; fi",
            "if [ -f shared/settings.local.php ] ; then cd web/sites/default; rm settings.local.php; ln -s ../../../local/settings.local.php settings.local.php; fi",
            "if [ -f shared/drushrc.php ] ; then cd web/sites/default; rm drushrc.php; ln -s ../../../local/drushrc.php drushrc.php; fi",
            "if [ -a shared/files ] ; then cd web/sites/default; rm files; ln -s ../../../local/files/ files; fi"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        }
    }
}
